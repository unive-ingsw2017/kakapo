<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rippleview"
    android:elevation="8dp"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/titolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/titolo_item"
        android:textSize="@dimen/font_size2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_drawable"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/entrata_prov1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_size2"
            android:textColor="@color/green_text"/>


        <TextView
            android:id="@+id/entrata_prov2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_size2"
            android:textColor="@color/green_text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_drawable"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/uscita_prov1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_size2"
            android:textColor="@color/red_text"/>

        <TextView
            android:id="@+id/uscita_prov2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/font_size2"
            android:textColor="@color/red_text"/>
    </LinearLayout>
</LinearLayout>