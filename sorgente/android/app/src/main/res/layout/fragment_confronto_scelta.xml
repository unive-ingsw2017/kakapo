<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.heliohost.kakapo.datitalia.ConfrontoSceltaFragment"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="63dp"
        android:layout_height="17dp"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="199dp"
        android:text="@string/str_confronto_1"
        app:layout_constraintBottom_toTopOf="@+id/spinner_provincia1"
        app:layout_constraintStart_toStartOf="@+id/spinner_provincia1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/str_confront_2"
        app:layout_constraintBottom_toTopOf="@+id/spinner_provincia2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_provincia1" />

    <Spinner
        android:id="@+id/spinner_provincia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toTopOf="@+id/btn_confronta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:entries="@array/province"/>

    <Spinner
        android:id="@+id/spinner_provincia1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:entries="@array/province"/>

    <Button
        android:id="@+id/btn_confronta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="101dp"
        android:text="@string/str_confronto_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_provincia2" />

</android.support.constraint.ConstraintLayout>
